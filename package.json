{
  "name": "fem-cards-section",
  "version": "1.1.0",
  "description": "Frontend Mentor Cards Section Challenge",
  "main": "index.html",
  "scripts": {
    "sass": "sass styles/main.scss styles/css/main.css",
    "sass:watch": "sass --watch styles/main.scss styles/css/main.css",
    "sass:build": "sass --style=compressed styles/main.scss styles/css/main.min.css",
    "sass:dev": "sass --watch styles/main.scss styles/css/main.css --style=expanded",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "browser-sync": "browser-sync start --server --files '*.html, styles/css/*.css, styles/scss/*.scss' --no-notify",
    "dev": "concurrently \"npm run sass:dev\" \"npm run browser-sync\"",
    "build": "npm run sass:build"
  },
  "keywords": [
    "frontend-mentor",
    "css",
    "sass",
    "responsive-design"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "sass": "^1.69.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
